= form_for @user, :url=>{:controller =>'users', :action => 'create'} do |f|
  = f.label "First Name"
  = f.text_field :first_name
  %br/
  = f.label "Last Name"
  = f.text_field :last_name
  %br/
  = f.label :Email
  = f.text_field :email
  %br/
  = f.label :Password
  = f.password_field :password
  %br/
  = f.label 'Confirm Password'
  = f.password_field :password_confirmation
  %br/
  = f.submit