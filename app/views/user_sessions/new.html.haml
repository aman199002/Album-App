.alert-error
  - @user_session.errors.full_messages.each do |msg|
    = msg
    %br/
%br/
= form_for @user_session, :url=>{:controller =>'user_sessions', :action => 'create'} do |f|
  = f.label :Email
  = f.text_field :email
  %br/
  = f.label :Password
  = f.password_field :password
  %br/
  = f.submit 'Sign In'
= link_to image_tag("google_logo.jpg", :height => '70px', :width => '70px'), google_signin_path
= link_to image_tag("facebook.jpg", :height => '70px', :width => '80px'),'/auth/facebook', :class => "margin-left-30px"
